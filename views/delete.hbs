
    <h1>Skate Park</h1>

<div>
       <p id="app"></p>
</div>

<script>

const app = document.getElementById("app")
const query = location.pathname.slice(8);


const ejecutar = async () => {
    
    try{
         const res = await fetch(`/api/v1/delete/${query}`, {
                method: 'delete',
                
            })
            const data = await res.json()
            app.innerHTML = `
            <p>La cuenta con usuario ${data.respuesta.user.email} a sido eliminada </p>
            `
            setTimeout(function(){
                window.location.href = "/login";
            },3000);
    }catch(error){
        console.log(error)
    }
}

ejecutar()

</script>